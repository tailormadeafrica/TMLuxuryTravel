<div class="col-xs-12 col-sm-4 col-md-3 col-lg-3 portfolio-item">
  <%= link_to refinery.portfolio_gallery_path(gallery) do %>
    <% if gallery.cover_image.present? %>
        <%= image_fu(gallery.cover_image.image, "270x" , {:title => gallery.cover_image.title,:class => "img-responsive"}) %>
    <% end %>
    <div class="details">
      <% if gallery.items.count > 1 %>
        <%= gallery.title + " (" + gallery.items.count.to_s + ")" %>
      <% else %>
        <%= gallery.title %>
      <% end %>
    </div>
  <% end %>
</div>
