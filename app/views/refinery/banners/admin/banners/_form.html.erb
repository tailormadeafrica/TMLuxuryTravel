<%= form_for [refinery, :banners_admin, @banner] do |f| -%>
    <%= render '/refinery/admin/error_messages',
               :object => @banner,
               :include_object_name => true %>

    <%= hidden_field_tag 'banner[page_ids][]' %>
    <%= hidden_field_tag 'banner[post_ids][]' %>

    <div class='field'>
      <%= f.label :name -%>
      <%= f.text_field :name, :class => 'larger widest'  -%>

    </div>

    <!--<div class='field'>-->
      <!--<%#= f.label :title -%>-->
      <!--<%#= f.text_field :title  -%>-->

    <!--</div>-->

  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:description].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/banners/banner", :default => part.to_s.titleize), "##{part}" %>
          </li>
        <% end %>
      </ul>
      <div id='page_part_editors'>
        <% [:description].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>

  </div>

    <!--<div class='field'>-->
      <!--<%#= f.label :description -%>-->
      <!--<%#= f.text_field :description, :class => 'larger widest'  -%>-->

    <!--</div>-->

    <div class='field'>
      <%= f.label :image -%>
      <%= render '/refinery/admin/image_picker',
                 :f => f,
                 :field => :image_id,
                 :image => @banner.image,
                 :toggle_image_display => false,
                 :description => t('refinery.banners.admin.banner')
      %>

    </div>


    <div class='field'>
      <%= f.label :url -%>
      <%= f.text_field :url  -%>

    </div>


    <div class='field'>
      <%= f.label :is_active -%>
      <%= f.check_box :is_active, :checked => @banner[:is_active]  -%>

    </div>

    <div class='field'>
      <%= f.label :start_date -%>
      <%= f.date_select :start_date  -%>

    </div>

    <div class='field'>
      <%= f.label :expiry_date -%>
      <%= f.date_select :expiry_date  -%>

    </div>

    <div class="field">
      <%= f.label :posts %>
      <% ::Refinery::Blog::Post.all.each do |post| %>
        <div>
          <%= check_box_tag "banner[post_ids][]", post.id, @banner.posts.include?(post) %>
          <%= post.title %>
        </div>
      <% end %>
    </div>

    <section id="records" class="tree">
      <%= f.label :pages %>
      <ul class="tristate">
        <%= render :partial => 'refinery/banners/admin/banners/page', :collection => Refinery::Page.order("lft ASC").select{|p| p.parent_id.nil?}  %>
      </ul>
    </section>


    <div style="clear: both;"></div>
    <%= render '/refinery/admin/form_actions', :f => f,
               :continue_editing => false,
               :delete_title => t('delete', :scope => 'refinery.banners.admin.banners.banner'),
               :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @banner.name) %>
<% end -%>


