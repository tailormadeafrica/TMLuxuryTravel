<% content_for :body_content_title do %>
  <%= @activity.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @activity.name %>
    </p>
  </section>
  <section>
    <h1>Cover Image</h1>
    <p>
      <%= image_fu @activity.cover_image, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @activity.description %>
    </p>
  </section>
  <section>
    <h1>Rating</h1>
    <p>
      <%=raw @activity.rating %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="activities">
      <% @activities.each do |activity| %>
        <li>
          <%= link_to activity.name, refinery.activities_activity_path(activity) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
