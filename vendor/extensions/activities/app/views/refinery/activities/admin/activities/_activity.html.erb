<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(activity) -%>">
  <span class='title'>
    <%= activity.name %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.activities_activity_path(activity),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_activities_admin_activity_path(activity),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.activities_admin_activity_path(activity),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => activity.name),
        :method => :delete %>
  </span>
</li>
