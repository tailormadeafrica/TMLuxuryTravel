<% content_for :body_content_title do %>
  <%= @amenity.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @amenity.name %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @amenity.image, nil %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="amenities">
      <% @amenities.each do |amenity| %>
        <li>
          <%= link_to amenity.name, refinery.amenities_amenity_path(amenity) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
