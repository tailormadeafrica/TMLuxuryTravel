<ul>
  <% if ::Refinery::Accommodations::Admin::AccommodationsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.accommodations_admin_accommodations_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_accommodations_admin_accommodation_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Accommodations::Admin::AccommodationsController.sortable? && ::Refinery::Accommodations::Accommodation.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Accommodations"),
                 refinery.accommodations_admin_accommodations_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Accommodations"),
                 refinery.accommodations_admin_accommodations_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
