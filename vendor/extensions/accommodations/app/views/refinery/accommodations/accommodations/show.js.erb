$('.navbar-hamburger').click(function(){
  if (!$('.navbar-hamburger').hasClass('navbar-on')) {
    $('html, body').animate({scrollTop : 0},500);
    return false;
  }
});

$(function(){
  $('.navbar-hamburger').click(function(){
    $('.navbar-hamburger').toggleClass('navbar-on');
    $('nav').fadeToggle();
    $('nav').removeClass('nav-hide');
  });
});

$('a[href*=#]:not([href=#])').click(function() {
  $('.navbar-on').click();
  if (location.pathname.replace(/^\//,'') == this.pathname.replace(/^\//,'') && location.hostname == this.hostname) {
    var target = $(this.hash);
    target = target.length ? target : $('[name=' + this.hash.slice(1) +']');
    if (target.length) {
      $('html,body').animate({
        scrollTop: target.offset().top
      }, 1000);
      return false;
    }
  }
});

var count = $('.lodge_truncate_text').children('p').length;
if (count > 2){
    $( ".lodge_truncate_text > p:nth-child(3)").nextAll().addClass('hide_this_tag');
    $(".hide_this_tag").hide();
    $( ".lodge_truncate_text").append("<p style='text-align: center;'><a href='#' class='read_more_content2 btn btn-custom'>Read More</a></p>");
}

$('.read_more_content2').click(function () {
    $(this).parent().siblings('.hide_this_tag').slideToggle();
    var $this = $(this);
    $this.toggleClass('.link');
    if($this.hasClass('.link')){
        $this.text('Read Less');
    } else {
        $this.text('Read More');
    }
    return false
});